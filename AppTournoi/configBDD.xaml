<Window x:Class="AppTournoi.configBDD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTournoi"
        mc:Ignorable="d"
         Title="Paramètres d'accès à la base de données" Height="450" Width="800" 
        MinHeight="450" MinWidth="800" ResizeMode="NoResize">
    <Grid Background="#bed7df" Margin="0,-10,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>

        <Label Content="Adresse IP BDD" HorizontalAlignment="Left" Margin="98,33,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Height="37" Width="227" FontSize="25"/>
        <TextBox x:Name="tbAddIP" HorizontalAlignment="Left" Margin="353,33,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="148" Height="49" />

        <Label Content="Port d'écoute BDD" HorizontalAlignment="Left" Margin="98,29,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Height="37" Width="228" FontSize="25" Grid.Row="1"/>
        <TextBox x:Name="tbPort" HorizontalAlignment="Left" Margin="353,23,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="148" Height="49" Grid.Row="1" />

        <Label Content="Nom d'utilisateur" HorizontalAlignment="Left" Margin="98,17,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Height="37" Width="227" FontSize="25" Grid.Row="2"/>
        <TextBox x:Name="tbUtil" HorizontalAlignment="Left" Margin="353,11,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="148" Height="49" Grid.Row="2" />

        <Label Content="Mot de passe" HorizontalAlignment="Left" Margin="98,3,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Height="49" Width="227" FontSize="25" Grid.Row="3"/>
        <PasswordBox x:Name="tbMDP" HorizontalAlignment="Left" Margin="353,3,0,0" VerticalAlignment="Top" Width="148" Height="49" Grid.Row="3" />

        <Button Content="Enregistrer" HorizontalAlignment="Left" Margin="251,0,0,61" Width="149" Height="43" VerticalAlignment="Bottom" Click="Enregistrer_Click" Grid.Row="4" />
        <Button Content="Annuler" HorizontalAlignment="Left" Margin="438,0,0,61" Width="149" Height="43" VerticalAlignment="Bottom" Click="Annuler_Click" Grid.Row="4"/>

    </Grid>
</Window>
